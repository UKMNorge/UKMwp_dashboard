{% if post is defined %}
	{% embed "post.html.twig" %}{% endembed %}
{% else %}
	{% if page == 1 %}
		<div class="clearfix"></div>
		<div class="header-dashboard" style="margin: 0px 0px 1em -20px;">ARRANGÃ˜RSYSTEMET</div>
		<div class="clearfix"></div>
	{% endif %}
	
	<div class="container-fluid dashboard">
		<div class="row">
			{% if page == 1 %}
				<div class="col-xs-12 col-sm-4 pull-right">
					{% if deltakerbruker is defined and deltakerbruker %}
						<div>
							{% embed "blogvalg.html.twig" %}{% endembed %}
						</div>
					{% else %}
						<div>
							{% embed "meldinger.html.twig" %}{% endembed %}
						</div>
					{% endif %}
					<div>
						{% embed "kalender.html.twig" %}{% endembed %}
					</div>
					{% if block_pre_messages is defined %}
						{% for bm in block_pre_messages %}
							<div>
								{{ bm|raw }}
							</div>
						{% endfor %}
					{% endif %}
					{% if site_type %}
						<div>
							{% embed "pameldte.html.twig" %}{% endembed %}
						</div>
					{% endif %}

					{% if deltakerbruker is defined and deltakerbruker %}
						<div>
							{% embed "profil.html.twig" %}{% endembed %}
						</div>
					{% endif %}
				</div>
			{% endif %}
			
			<div class="col-xs-12 col-sm-8">
				{% for post in news %}
					<div class="col-xs-6">
						{% embed "news.html.twig" %}{% endembed %}
					</div>
					{% if loop.index is divisible by ( 2 ) %}
						<div class="clearfix" style="margin-bottom: 2em;"></div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
		
		
		<div class="row">
			{% if pagination_prev is defined %}
				<div class="col-xs-6">
					<a href="?pagination={{pagination_prev}}" class="btn btn-default pull-left">Nyere saker</a>
				</div>
			{% endif %}
			
			{% if pagination_next is defined %}
				<div class="col-xs-6">
					<a href="?pagination={{pagination_next}}" class="btn btn-default pull-right">Eldre saker</a>
				</div>
			{% endif %}
		</div>
	</div>
{% endif %}