<script>
	google.charts.setOnLoadCallback(samtykke_status);

	function samtykke_status() {
		var data = google.visualization.arrayToDataTable([
			['Status','Antall'],
            ['Ikke send', {{ samtykke.ikke_send }}],
            ['Ikke sendt', {{ samtykke.ikke_sendt }}],
            ['Ikke sett', {{ samtykke.ikke_sett }}],
            ['Ikke svart', {{ samtykke.ikke_svart }}],
            ['Ikke godtatt', {{ samtykke.ikke_godkjent }}],
            ['Godtatt', {{ samtykke.godkjent }}]
        ]);
		
		var options = {
		  chartArea: {'width': '100%', 'height': '88%'},
		  pieHole: 0.4,
		  legend: 'none',
		  colors: [ 
              '#f8f9fa', // ikke send
              '#ffc107', // ikke sendt
              '#17a2b8', // ikke sett
              '#6c757d', // ikke svart
              '#dc3545', // ikke godkjent
              '#28a745', // godkjent
              ]
		};
		
		var chart = new google.visualization.PieChart(document.getElementById('samtykke_graph'));
		chart.draw(data, options);
	}
</script>

<table class="table table-dashboard {{ registrerte_monstringer.status }}">
	<thead>
		<tr class="">
			<th colspan="2">
				Samtykke
			</th>
		</tr>
	</thead>
	<tbody>						
		<tr>
			<td align="center">
				<div id="samtykke_graph" style="width:90%; max-width: 95%; height: 120px; min-height:100px; max-height:150px;">Laster inn...</div>
			</td>
		</tr>
	</tbody>
</table>
