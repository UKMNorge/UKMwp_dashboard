<script>
	google.charts.setOnLoadCallback(samtykke_status);

	function samtykke_status() {
		var data = google.visualization.arrayToDataTable([
			['Status','Antall'],
            {% for key, val in samtykke %}
            ['{{key}}', {{val}}]{{ not loop.last ? ', '}}
            {% endfor %}
		]);
		
		var options = {
		  chartArea: {'width': '100%', 'height': '88%'},
		  pieHole: 0.4,
		  legend: 'none',
		  colors: [ '#d9534f', '#5cb85c']
		};
		
		var chart = new google.visualization.PieChart(document.getElementById('samtykke_graph'));
		chart.draw(data, options);
	}
</script>

